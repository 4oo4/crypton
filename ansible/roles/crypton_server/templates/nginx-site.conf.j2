{% set fqdn = crypton_service.name + '.' + crypton_service.domain %}
server {
    listen 80;
    server_name {{ fqdn }};
    rewrite ^/(.*)$ https://{{ fqdn }}/$1 permanent;
}

server {
    listen 443 ssl;
    server_name {{ fqdn }};

    access_log /var/log/nginx/{{ fqdn }}-access.log;
    error_log /var/log/nginx/{{ fqdn }}-error.log;

    add_header X-Frame-Options 'SAMEORIGIN';
    add_header Strict-Transport-Security 'max-age=31536000; includeSubDomains; preload';
    add-header Content-Security-Policy "default-src 'self'; connect-src wss://localhost localhost; script-src 'self'; img-src 'self'; style-src 'self'; font-src 'self'; object-src 'self'";

    ssl_certificate /etc/nginx/{{ crypton_service.domain }}-wildcard.pem;
    ssl_certificate_key /etc/nginx/{{ crypton_service.domain }}-wildcard.pem;
    ssl_session_timeout  15m;

    ssl_protocols {{ ssl_protocols|join(' ') }};
    ssl_ciphers {{ ssl_ciphers|join(':') }};
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:crypton:10m;

    Cache-Control 'no-cache';
    server_tokens off;

    rewrite ^/examples/.*/crypton.js /crypton.js;

    location /examples/diary {
        alias {{ crypton_checkout }}/client/examples/diary;
    }

    location /examples/chat3 {
        alias {{ crypton_checkout }}/client/examples/chat3;
    }

    location /vendor {
        alias /home/crypton_server/vendor;
    }

    location / {
        proxy_pass https://localhost:{{ crypton_service.local_port }}/;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect default;
    }
}
